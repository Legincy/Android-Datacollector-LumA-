<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/constraintLayout"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.main.PlaceholderFragment">

    <Spinner
            android:layout_width="373dp"
            android:layout_height="37dp" android:id="@+id/spinnerAccuracy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.489"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="100dp"
            android:entries="@array/Accuracy" android:textAlignment="center"/>
    <Spinner
            android:layout_width="373dp"
            android:layout_height="37dp" android:id="@+id/spinnerSensor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toTopOf="@+id/spinnerAccuracy" android:layout_marginBottom="10dp"
            android:entries="@array/SensorTypes" android:textAlignment="center"/>
    <TextView
            android:layout_width="103dp"
            android:layout_height="95dp" android:id="@+id/tvRaw"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/spinnerSensor" android:layout_marginBottom="24dp"
            android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>